<section class="cart py-16 px-16">
  <% if(session.cart) { %>
  <div class="order container mx-auto">
    <div class="flex items-center border-b border-gray-300 pb-4">
      <img src="/img/cart-black.png" alt="cart" />
      <h1 class="font-bold text-2xl ml-4">Order summary</h1>
    </div>

    <div class="main flex px-2">
      <div class="left flex-1">
        <div class="items-list">
          <% for(let pizza of Object.values(session.cart.items)) { %>
          <div class="flex justify-between items-center my-8">
            <img class="w-24" src="/img/<%= pizza.item.image%>" alt="" />
            <div class="flex-1 ml-4">
              <h1><%= pizza.item.name%></h1>
              <span><%= pizza.item.size%></span>
            </div>
            <span class="flex-1">Pcs <%= pizza.qty%></span>
            <span class="font-bold text-lg">Rs. <%= pizza.item.price%></span>
          </div>
          <% } %>
        </div>
        <hr />
      </div>
      <div class="right flex-2">
        <div class="text-right py-4">
          <div class="">
            <span class="text-lg font-bold">Total Amount:</span>
            <span class="amount text-2xl font-bold ml-4"
              >Rs. <%= session.cart.totalPrice%></span
            >
          </div>
          <div class="">
            <form action="" class="mt-12">
              <input
                class="border border-gray-400 p-2 w-1/2 mb-4 rounded-md"
                type="tel"
                placeholder="Phone number"
              />
              <input
                class="border border-gray-400 p-2 w-1/2 rounded-md"
                type="text"
                placeholder="Address"
              />
              <div>
                <!-- <button
                  class="btn-primary px-6 py-2 text-white rounded-full font-bold mt-6"
                  type="submit"
                >
                  Order Now
                </button> -->
              </div>
            </form>
          </div>

          <a
            href="/login"
            class="inline-block cursor-pointer btn-primary px-6 py-2 text-white rounded-full font-bold mt-6"
            >Login to continue</a
          >
        </div>
      </div>
    </div>
  </div>
  <% } else { %>

  <div class="empty-cart py-16">
    <div class="container mx-auto text-center">
      <h1 class="text-3xl font-bold mb-2">Cart Empty ðŸ˜•</h1>
      <p class="text-gray-500 text-lg mb-12">
        You probably haven't ordered anything yet. <br />
        To order the stuff, go to the main page.
      </p>
      <img class="w-1/5 mx-auto" src="/img/empty-cart.png" alt="empty-cart" />
      <a
        href="/"
        class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12"
        >Go back</a
      >
    </div>
  </div>

  <% } %>
</section>
