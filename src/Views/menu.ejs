      <!-- Heading   -->
      <div class="container mb-3">
        <a href="/menu" class="text-xl font-bold md:text-2xl">All Varieties</a>
      </div>

      <!-- Search -->
      <div class="container">
        <input
          id="filterInput"
          class="border border-gray-400 p-2 w-1/2 mb-2 rounded-md"
          type="text"
          placeholder="Search Food Items"
          style="
            margin-right: 100px;
            margin-top: 20px;
            max-width: 300px;
            outline-width: 0;
            position: fixed;
          "
        />
      </div>
      <hr />

      <!-- Varieties -->
      <div class="mt-16">
        <!-- Pizza -->

        <h2 class="font-semibold mb-4 border-b md:text-2xl">Pizza</h2>
        <div class="wrapper1" id="names1">
          <% foods.forEach(function(food) { %> <%
          if(food.id[food.id.length-1]=='e' ) { %>
          <div class="item1">
            <div class="w-full xs:w-4/5 md:w-64">
              <img
                class="h-40 mb-4 mx-auto"
                src="/img/<%= food.image %>"
                alt=""
              />
              <div class="text-center mb-4">
                <h2 class="mb-4 text-lg"><%= food.name %></h2>
                <span class="size py-1 px-4 rounded-full uppercase text-xs"
                  ><%= food.size %></span
                >
                <div class="flex items-center justify-around mt-6 px-2">
                  <span class="font-bold text-lg">₹ <%= food.price %></span>
                  <button
                    data-food="<%= JSON.stringify(food) %>"
                    class="add-to-cart py-1 px-5 rounded-full font-bold"
                  >
                    <span>+</span> <span class="ml-4">Add</span>
                  </button>
                </div>
              </div>
            </div>
          </div>
          <% }%> <% })%>
        </div>

